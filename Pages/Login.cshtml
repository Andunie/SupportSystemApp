@page
@model SupportSystem.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Login.css" />
</head>
<body>
    <section class="gradient-form">
        <div class="container">
            <div class="card rounded-3 text-black">
                <div class="row g-0">
                    <div class="col-lg-6">
                        <div class="card-body p-md-5 mx-md-4">
                            <div class="text-center mb-5">
                                <h4 class="mt-3">Login</h4>
                            </div>

                            <form method="post">
                                <h5 class="mb-4">Please login to your account</h5>

                                @if (TempData["LoginFailed"] != null)
                                {
                                    <div class="alert alert-danger mb-4">
                                        @TempData["LoginFailed"]
                                    </div>
                                }

                                <div class="form-outline">
                                    <input type="text" asp-for="UsernameOrEmail" class="form-control" required />   
                                    <label class="form-label">Email Address or Username</label>
                                </div>

                                <div class="form-outline">
                                    <input type="password" asp-for="Password" class="form-control" required />
                                    <label class="form-label" for="password">Password</label>
                                </div>

                                <div class="text-center pt-1 mb-4">
                                    <button class="btn btn-primary btn-block mb-3" type="submit">
                                        Login
                                    </button>
                                    <a href="/ForgetPassword" class="text-muted d-block">Forgot password?</a>
                                </div>

                                <div class="d-flex align-items-center justify-content-center">
                                    <p class="mb-0 me-2">Don't have an account?</p>
                                    <a href="/Register" class="btn btn-outline-danger">Create new</a>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-6 d-flex gradient-custom-2">
                        <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                            <h4 class="mb-4">Share with us your issues. We will find a solution!</h4>
                            <p class="small mb-0">
                                Manage all your support requests easily with SupportSystem and track processes transparently
                                Quickly submit your requests through our ticket system and monitor the resolution process in real-time.
                                SupportSystem leverages AI technology to address your issues faster and with smarter solutions.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

