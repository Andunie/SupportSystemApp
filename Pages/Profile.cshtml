@page
@model SupportSystemApp.Pages.ProfileModel
@{
    ViewData["Title"] = null;
}

<link rel="stylesheet" href="~/css/Profile.css" />

<div style="margin-top:100px;" class="profile-wrapper">
    <h2>Profile</h2>

    <div class="profile-card">
        <div class="section">
            <h5 class="section-title">👤 Profile Information</h5>
            <p><strong>Username:</strong> @Model.profileDto.Username</p>
            <p><strong>Email:</strong> @Model.profileDto.Email</p>
        </div>

        <div class="section mt-4">
            <h5 class="section-title">🔐 Update Password</h5>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success mt-3" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }

            <form method="post" class="mt-3">
                <div class="mb-3">
                    <label class="form-label">Current Password</label>
                    <input type="password" asp-for="passwordModel.CurrentPassword" class="form-control" required/>
                </div>
                <div class="mb-3">
                    <label class="form-label">New Password</label>
                    <input type="password" asp-for="passwordModel.NewPassword" class="form-control" required/>
                </div>
                <div class="mb-3">
                    <label class="form-label">New Password (Confirm)</label>
                    <input type="password" asp-for="passwordModel.ConfirmNewPassword" class="form-control" required/>
                </div>
                <button type="submit" class="btn btn-primary w-100">Update Password</button>
            </form>
        </div>
    </div>
</div>
